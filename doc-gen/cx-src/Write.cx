	private static function genSeeAlso(seealso:Array < XDescription > , root:String) {
		var ret = "";
		if (seealso.length > 0) {
			ret += Gen.NL() + Gen.BEG_FONT("detailsubtitle") + "See Also" + Gen.END_FONT() + Gen.NL();
			ret += Gen.BEG_DIV("docsee");
				for (see in seealso)
					ret += Gen.genXDesc(see, root) + Gen.NL();
			ret += Gen.END_DIV();
		}
		return ret;
	}
	
